{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2, 
	"name": "oklab-blocks/klimawidget",
	"title": "Klimawidget",
	"category": "media",
	"description": "Climate Data Visualization",
	"keywords": ["climate", "data", "graph"],
	"textdomain": "oklab-klimawidget",
	"attributes": {
		"layout": {
			"type": "string"
		},
		"title": {
			"type": "string"
		},
		"datasetOptions": {
			"type": "array",
			"default": [{"label": "Solar Power", "property": "GROSS_POWER", "energySource": "WIND", "interval": "YEAR", "backgroundColor": "rgba(255, 99, 132, 0.5)"}]
		}

	},
	"supports": {
		"html": false
	}
}
